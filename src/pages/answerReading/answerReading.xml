<view class="wrap" bindtouchstart="mytouchstart" bindtouchend="mytouchend">
  <view class="answer-top f30 c3 bb">
    <view class="at iconfont icon-datiqia">答题卡</view>
    <view class="at iconfont icon-jishibiao">{{ time }}</view>
    <view class="at iconfont icon-cuotiben">错题本</view>
  </view>

  <view class="f30 c3 a-title bb">
    <text>阅读理解</text>
    <text><text class="red">{{ showIndex + 1 }}</text>/{{ all }}</text>
  </view>

  <view class="swiper">
    <view class="s-text">{{ list[showIndex].text }}</view>
    <view wx:for="{{ list[showIndex].questionList }}" wx:for-item="question" wx:for-index="qIndex">
      {{ qIndex + 1 }}.{{ question.q }}
      <view data-index="{{ aIndex }}" data-showindex="{{ showIndex }}" data-outindex="{{ qIndex }}" catchtap="chooseCircle" class="c_choose" wx:for="{{ question.arr }}" wx:for-item="aItem" wx:for-index="aIndex">
        <view class="circle br {{ choose[showIndex][qIndex] == aIndex ? 'chooseCircle' : '' }}">{{ arrLabel[aIndex] }}</view><view>{{ aItem }}</view>
      </view>
    </view>
  </view>
</view>