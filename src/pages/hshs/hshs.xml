<!--绘声绘色-->
<view class="top">
  <view catchtap="chooseNav" data-index="1" class="{{ curNav == 1 ? 'choose' : '' }}">词卡</view>
  <view catchtap="chooseNav" data-index="2" class="{{ curNav == 2 ? 'choose' : '' }}">绘本</view>
</view>

<view wx:if="{{ curNav == 1 }}">
  <view class="t-c bb">
    <view class="t-c-s bb">
      <view class="t-c-s-w bb">
        <view catchtap="chooseNavP" data-index="{{ index }}" class="t-c-s-i bb {{ curNavP == index ? 'chooseP' : '' }}" wx:for="{{ showLists }}">
          <view class="t-c-s-i-t">{{ item.t }}</view>
          <image mode="aspectFill" src="{{ item.src }}"></image>
        </view>
        <view class="noMore" wx:if="{{ showLists.length == 0 }}">请添加词卡</view>
      </view>
      <!--用户操作-->
      <view class="t-c-b">
        <text catchtap="delShowItem" class="iconfont icon-shanchu-copy"></text>
        <text class="iconfont icon-bofang"></text>
      </view>
    </view>
  </view>

  <swiper class="bb" indicator-dots="true" indicator-color="#bfbfbf" indicator-active-color="#fedb03">
    <swiper-item class="bb">
      <view class="s-i bb" wx:for="{{ navListOne }}">
        <image mode="widthFix" src="{{ item.src }}"></image>
        <view>{{ item.t }}</view>
      </view>
    </swiper-item>
    <swiper-item class="bb">
      <view class="s-i bb" wx:for="{{ navListTwo }}">
        <image mode="widthFix" src="{{ item.src }}"></image>
        <view>{{ item.t }}</view>
      </view>
    </swiper-item>
  </swiper>

  <view class="card bb">
    <view catchtap="addToShow" data-index="{{ index }}" class="t-c-s-i bb" wx:for="{{ cardLists }}">
      <view class="t-c-s-i-t">{{ item.t }}</view>
      <image mode="aspectFill" src="{{ item.src }}"></image>
    </view>
  </view>
</view>

<view wx:else>
  <view catchtap="onIn" class="search bb {{ onIn ? 'onIn' : '' }}">
    <text class="iconfont icon-search"></text>
    <input confirm-type="search" bindinput="inputValue"  placeholder="绘本搜索"/>
  </view>

  <view class="h-w">
    <view class="h-c">
      <text class="h-c-t">一周绘本推荐</text>
      <view class="h-c-c bb">
        <image wx:for="{{ recommend }}" src="{{ item }}"></image>
      </view>
    </view>

    <view class="h-nav bb">
      <view class="f30 tac c3" wx:for="{{ navList }}">
        <text>{{ item }}</text>
        <text wx:if="{{ !(index ==  (navList.length - 1))}}" class="h-l">|</text>
      </view>
      <!--<view class="f30 tac c3" wx:for="{{ navList2 }}">-->
        <!--<text>{{ item }}</text>-->
        <!--<text wx:if="{{ !(index ==  (navList.length - 1))}}" class="h-l">|</text>-->
      <!--</view>-->
    </view>

    <view class="h-nav-c bb">
      <view class="bb tac f30 c3" wx:for="{{ bottomLists }}">
        <image mode="aspectFill" src="{{ item.src }}"></image>
        <view>{{ item.t }}</view>
      </view>
    </view>
  </view>
</view>